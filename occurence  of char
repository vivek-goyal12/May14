package practice4; // package name

public class Occurence { // class create name is Occurence;
    public static int count(String s , char c){ ? method create to count 
        int n = 0; // a variable intalize to count occurence
        int l = s.length(); // find the length of string 
        for(int i = 0; i<l ; i++){ // for loop
            if(s.charAt(i)==c){ // statement to compare with that character
                n++; // increase the number by one 
            }
        }

        return n; // retuen the value of occurence of that character
    }

    public static void main(String[] args) { // create main method
        String s = " hello world"; // intalize a string 
        char c  ='o'; // intalize a character
        int result = count(s,c); // find the result 
        System.out.println(result); // print the result

    }
}
